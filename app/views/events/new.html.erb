<html>
  <body>
    <div class="text-center col-5">
      <%= form_tag url_for(@event) do %>
        <div class="form-group">
          <%= label_tag 'Title', name = 'Title', class: 'font-weight-bold'%>
          <%= text_field_tag 'title', nil, placeholder: 'Enter a title', class: 'form-control'%>
          <small id="emailHelp" class="form-text text-muted">5 caracters minimum and 140 caracters maximum.</small>
        </div>
        <br>

         <div class="form-group">
          <%= label_tag "start_date", name = "Date et heure de dÃ©but (YYYY-MM-DD HH:MM:SS)", class: 'font-weight-bold'%>
          <%= datetime_field_tag 'start_date', nil, placeholder: '(YYYY-MM-DD HH:MM:SS)', class: 'form-control'%>
        </div>

        <div class="form-group">
        <%= label_tag "duration", name = "Duration ", class: 'font-weight-bold'%>
        <%= text_field_tag 'duration', nil, placeholder: 'in minutes', class: 'form-control'%>
        </div>

        <div class="form-group">
        <%= label_tag "location", name ="Location", class: 'font-weight-bold'%>
        <%= text_field_tag 'location', nil, placeholder: 'must be a city', class: 'form-control'%>
        </div>

        <div class="form-group">
          <%= label_tag 'description', name = 'Description' , class: 'font-weight-bold'%>
          <%= text_area_tag 'description', nil, rows: 3, placeholder: 'Describe you event...', class: 'form-control'%>
        </div>

         <div class="form-group">
        <%= label_tag "price", name ="Price", class: 'font-weight-bold'%>
        <%= text_field_tag 'price', nil, placeholder: 'price in dollars $$', class: 'form-control'%>
        </div>
        <br><br>

        <%= submit_tag "Create an event", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </body>
</html>